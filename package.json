{
  "name": "mcp-client",
  "version": "1.0.0",
  "type": "module",
  "description": "Minimal cross-platform CLI client for the Model Context Protocol (MCP).",
  "main": "index.js",
  "bin": {
    "mcp": "./bin/mcp"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "clean": "rm -rf dist",
    "dev": "tsx src/index.ts",

    "test": "node dist/test/test-runner.js",
    "prepare": "npm run build",

    "lint": "echo \"No linter configured yet\"",
    "start": "node dist/index.js",

    "link": "npm link",
    "unlink": "npm unlink -g mcp-client || true"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/daporun/mcp-client.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/daporun/mcp-client/issues"
  },
  "homepage": "https://github.com/daporun/mcp-client#readme",
  "devDependencies": {
    "@types/node": "^25.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
